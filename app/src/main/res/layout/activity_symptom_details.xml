<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Common.PatientScreens.SymptomDetails"
    android:background="@color/lightWhite">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/back_pressed"
                android:onClick="gotoPreviousActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/general_back_icon"
                app:iconTint="@color/black"
                app:backgroundTint="#00000000"
                android:layout_centerVertical="true"
                android:paddingLeft="15dp"/>


        </RelativeLayout>

        <TextView
            android:id="@+id/symptomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Symptom Name"
            android:fontFamily="@font/muli_black"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Dr Rahul Salunke"
            android:fontFamily="@font/muli_extralight"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="190dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/cv3"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diagnosis"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/symptom_button"
                    android:onClick="goToDiagnosisScreeen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="#00000000"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/diagnosis_icon"
                android:layout_marginTop="-10dp"
                android:layout_alignParentRight="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/cv7"
                android:layout_margin="20dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/prescription1_icon"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prescription"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:fontFamily="@font/baloo"
                    android:layout_alignParentRight="true"
                    android:padding="25dp"/>

                <com.google.android.material.button.MaterialButton
                    android:onClick="goToPriScriptionScreeen"
                    android:id="@+id/prescription_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="#00000000"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="190dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/cv5"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/baloo"
                    android:padding="25dp"/>

                <com.google.android.material.button.MaterialButton
                    android:onClick="goToReportsScreeen"
                    android:id="@+id/reports_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundTint="#00000000"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/medical_reports_icon"
                android:layout_marginTop="-15dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>